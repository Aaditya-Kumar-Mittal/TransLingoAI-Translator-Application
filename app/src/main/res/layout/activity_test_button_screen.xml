<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_31"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TestButtonScreen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        android:elevation="4dp"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEnglishToHindi"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/card_border_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calistoga"
                    android:padding="20dp"
                    android:text="English To Hindi Translation"
                    android:textAlignment="center"
                    android:textColor="@color/blue_500"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAnyToHindi"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/card_border_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calistoga"
                    android:padding="20dp"
                    android:text="Any Language To Hindi Translation"
                    android:textAlignment="center"
                    android:textColor="@color/blue_500"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardVoiceTranslation"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/card_border_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calistoga"
                    android:padding="20dp"
                    android:text="Voice and Text Translation"
                    android:textAlignment="center"
                    android:textColor="@color/blue_500"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Card 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRateUs"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/card_border_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calistoga"
                    android:padding="20dp"
                    android:text="Rate Us"
                    android:textAlignment="center"
                    android:textColor="@color/blue_500"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Card 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogout"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/card_border_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calistoga"
                    android:padding="20dp"
                    android:text="Logout"
                    android:textAlignment="center"
                    android:textColor="@color/blue_500"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
