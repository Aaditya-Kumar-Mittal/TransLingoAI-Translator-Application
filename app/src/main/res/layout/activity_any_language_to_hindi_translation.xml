<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_rounded_background"
            android:gravity="center|start"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/calistoga"
                android:gravity="center"
                android:text="Translate Any Language To Hindi"
                android:textColor="@color/blue_500"
                android:textSize="25sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/textToTranslate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edittext_background"
                android:ems="20"
                android:hint="Enter Text To Translate"
                android:padding="25dp"
                android:textColor="@color/blue_500"
                android:textColorHint="@color/blue_500"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calistoga"
                android:padding="8dp"
                android:text="Select Language:"
                android:textColor="@color/blue_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/fromLanguagesList1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:spinnerMode="dialog"
                android:background="@drawable/spinner_background"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calistoga"
                android:text="Translated Text"
                android:textColor="@color/blue_500"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/translatedTexttoHindi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/blue_500"
                android:textSize="22sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/translateButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue_500"
                android:padding="14dp"
                android:text="Translate"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
